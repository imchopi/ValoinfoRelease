<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:navigationIcon="@drawable/baseline_arrow_back_24"
        app:title="@string/tierlistInfo"
        app:titleTextColor="@android:color/white">

        <ImageButton
            android:id="@+id/btnShare"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"
            android:background="@drawable/share"
            android:padding="16dp" />

    </com.google.android.material.appbar.MaterialToolbar>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topAppBar"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Primer y quinto elemento -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewSkill1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="20dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center" />

                <ImageView
                    android:id="@+id/imageViewSkill5"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="20dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center" />

            </LinearLayout>

            <!-- Segundo y cuarto elemento -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewSkill2"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/imageViewSkill4"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="20dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- Tercer elemento -->
                <ImageView
                    android:id="@+id/imageViewSkill3"
                    android:layout_width="110dp"
                    android:layout_height="120dp"
                    android:layout_margin="20dp"
                    android:layout_gravity="center" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
